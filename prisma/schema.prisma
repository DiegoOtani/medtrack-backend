generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid()) @map("_id")
  name        String
  email       String       @unique
  password    String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  medications Medication[]
}

enum Frequency {
  DAILY
  WEEKLY
  MONTHLY
}

model Medication {
  id        String   @id @default(uuid()) @map("_id")
  name      String
  dosage    String
  frequency Frequency
  expiresAt DateTime
  stock     Int
  notes     String?
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
